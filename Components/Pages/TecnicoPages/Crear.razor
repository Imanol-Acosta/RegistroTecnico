@page "/Tecnico/Create"
@rendermode InteractiveServer
@inject TecnicoService tecnicoService
@inject NavigationManager navigationManager
@using RegistroTecnico.Models
@using System.ComponentModel.DataAnnotations
<PageTitle>Crear Técnico</PageTitle>

<div class="container mt-3">
    <div class="card shadow p-3">
        <div class="card-header mb-1 text-center bg-white border-0">
            <h2 class="card-title">Crear Técnico</h2>
        </div>

        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @mensajeError
                <button type="button" class="btn-close" @onclick="LimpiarError"></button>
            </div>
        }

        <div class="card-body">
            <EditForm Model="@tecnico" OnValidSubmit="Guardar">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">ID:</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" value="@proximoId" readonly />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Nombres:</label>
                    <div class="col-sm-9">
                        <InputText class="form-control" @bind-Value="tecnico.Nombres" placeholder="Ingrese el nombre del técnico" />
                        <ValidationMessage For="@(() => tecnico.Nombres)" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Sueldo por Hora:</label>
                    <div class="col-sm-9">
                        <InputNumber class="form-control" @bind-Value="tecnico.SueldoHora" placeholder="0.00" />
                        <ValidationMessage For="@(() => tecnico.SueldoHora)" />
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Tecnico/Index" class="btn btn-secondary">
                        <span class="bi bi-arrow-left"></span> Volver
                    </a>
                    <button type="submit" class="btn btn-success" style="background-color: #1C8D0F; border: none;">
                        <span class="bi bi-save"></span> Guardar
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Tecnico tecnico = new Tecnico();
    private string mensajeError = string.Empty;
    private int proximoId = 1; 

   

    private void LimpiarError()
    {
        mensajeError = string.Empty;
    }

    private async Task Guardar()
    {
        try
        {
           
            if (string.IsNullOrWhiteSpace(tecnico.Nombres))
            {
                mensajeError = "El nombre del técnico es obligatorio.";
                return;
            }

            if (tecnico.SueldoHora <= 0)
            {
                mensajeError = "El sueldo por hora debe ser mayor que cero.";
                return;
            }

           
            tecnico.TecnicoID = 0;

            
            var guardado = await tecnicoService.Guardar(tecnico);

            if (guardado)
            {
                
                navigationManager.NavigateTo("/Tecnico/Index");
            }
            else
            {
               
                mensajeError = "No se pudo guardar el técnico. El servicio indicó que la operación falló.";
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            
            if (ex.InnerException != null)
            {
                mensajeError = $"Error al guardar: {ex.Message}. Detalles: {ex.InnerException.Message}";
                Console.WriteLine($"Excepción interna: {ex.InnerException}");
            }
            else
            {
                mensajeError = $"Error al guardar: {ex.Message}";
            }

            
            Console.WriteLine($"Excepción al guardar técnico: {ex}");
            StateHasChanged(); 
        }
    }
}